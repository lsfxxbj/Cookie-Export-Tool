{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "icons/cookie-icon-16x16.png",
    "24": "icons/cookie-icon-24x24.png",
    "32": "icons/cookie-icon-32x32.png",
    "48": "icons/cookie-icon-48x48.png",
    "128": "icons/cookie-icon-128x128.png"
  },
  "permissions": [
    "cookies",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extensionName__"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "minimum_chrome_version": "88",
  "default_locale": "zh_CN"
}